<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.sundaydev.movieTest.viewmodel.PeopleDetailViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/people_image"
                app:loadImage="@{viewModel.detailData.profile_path}"
                app:original="@{true}"
                android:layout_width="360dp"
                android:layout_height="540dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.detailData.name}"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Subtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{viewModel.detailData.birthday}" />

            <androidx.appcompat.widget.AppCompatTextView
                app:otherName="@{viewModel.detailData.also_known_as}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:textStyle="italic" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{@string/biography(viewModel.detailData.biography)}" />

        </LinearLayout>


    </ScrollView>
</layout>
